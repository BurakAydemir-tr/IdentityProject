
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.RoleViewModel>

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roller</h2>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Role" asp-action="RoleCreate" asp-area="admin">Role Ekle</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol ismi</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-area="admin" asp-controller="role" asp-action="roleupdate" asp-route-id ="@item.Id">Rol Güncelle</a>
                            <a class="btn btn-warning btn-sm my-1" asp-area="admin" asp-controller="role" asp-action="roledelete" asp-route-id="@item.Id">Rol Sil</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

